<% if user_signed_in? %>
<h1>Users</h1>
<ul>
  <% @users.each do |user| %>
    <li><%= user.email %>: <%= link_to("Invite to Nest", "/connection/#{user.id}", method: :post) %></li>
  <% end %>
</ul>
<h1>Buddies in Your Nest</h1>
<ul>
  <% current_user.connections.each do |request| %>
    <li><%= request.buddy.email %> <%= link_to("Accept", "/connection/#{request.buddy.id}", method: :put) %></li>
  <% end %>
</ul>
<ul>
  <% current_user.buddies.each do |buddy| %>
    <li><%= buddy.email %></li>
  <% end %>
</ul>
<% else %>
<h1>Nest Buddies</h1>
<p>Join & find a nest!</p>
<% end %>
