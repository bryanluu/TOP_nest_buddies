<% if user_signed_in? %>
<h1>Users</h1>
<ul>
  <% @users.each do |user| %>
    <li><%= user.email %>: <% unless Connection.exists?(user_id: current_user.id, buddy_id: user.id) %><%= link_to("Invite to Nest", "/connection/#{user.id}", method: :post) %><% end %></li>
  <% end %>
</ul>
<h1>Buddies in Your Nest</h1>
<ul>
  <% Connection.requests_for(current_user.id).each do |request| %>
    <li><%= request.user.email %> <%= link_to("Accept", "/connection/#{request.user.id}", method: :put) %></li>
  <% end %>
</ul>
<ul>
  <% current_user.buddies.each do |buddy| %>
    <li><%= buddy.email %></li>
  <% end %>
</ul>
<% else %>
<h1>Nest Buddies</h1>
<p>Join & find a nest!</p>
<% end %>
